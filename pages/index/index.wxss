/**index.wxss**/

.search-box{
  display: flex;
  
  margin-top: 20rpx;
  margin-left: 70rpx;
  font-size: 26rpx;
 
}
.search-left{
  display: flex;
  width: 500rpx;
  height: 50rpx;
  align-items: center;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  background: #e0e0e0;
}
.search-left input{
  margin-left: 10rpx;
}
.search-left image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}
.search-btn{
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border: 1px solid #ccc;
   margin-left: 20rpx;
   border-radius: 10rpx;
}
.content{
  margin-top: 10rpx;
}
.list{
  display: flex;
 padding: 10px 15px;
  margin-top:10px;
  background: #fff;
  justify-content: space-between;
  align-items: center;
}
.logo{
  width: 150rpx;
  height: 150rpx;
}
.title-box{
  flex: 2;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.name{
  height: 40px;
  line-height: 40px;
  font-weight:bold;
}
.pro{
  display: flex;
  position: relative;
  justify-content: space-between;
  align-items: center;
}
.tops{
  width: 65%;
  height: 15rpx;
  background-color: #ccc;
  position: absolute;
  top: 8rpx;
  z-index: -1
}
.topBox {
  display: flex;
  flex-direction: row;
}
.topLittleBOX-1 {
  color: #4c4c4c;
}
.row-1 {
  height: 15rpx;
  border-radius: 20rpx;
}

.rowText {
  height: 30rpx;
  font-size: 28rpx;
  color: red;
}
.site{
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #000000;
}
.img-box{
  display: flex;
}
.img{
  width: 80rpx;
  height: 80rpx;
  margin-top: 10rpx;
}
.UCenter-bg {
  background-image: url(https://image.weilanwl.com/color2.0/index.jpg);
  background-size: cover;
  height: 300rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
  
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}